{
  "name": "hoopoun-poc",
  "version": "1.0.0",
  "description": "Smart contracts for the hoopoun poc",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "node_modules/.bin/truffle compile --optimize-runs 200",
    "migrate:local": "node_modules/.bin/truffle migrate --network=development --reset --all",
    "migrate:kovan": "node_modules/.bin/truffle migrate --network=kovan --reset --all",
    "ganache-cli": "node_modules/.bin/ganache-cli -i 15 --gasLimit 8000000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/satyamakgec/hoopoun-poc.git"
  },
  "author": "Satyam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/satyamakgec/hoopoun-poc/issues"
  },
  "homepage": "https://github.com/satyamakgec/hoopoun-poc#readme",
  "dependencies": {
    "bn.js": "^4.11.8",
    "openzeppelin-solidity": "^2.1.2",
    "web3": "^1.0.0-beta.35"
  },
  "devDependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "ganache-cli": "^6.3.0",
    "truffle": "^5.0.3",
    "truffle-hdwallet-provider": "^1.0.3"
  }
}
